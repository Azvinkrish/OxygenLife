<div class="container">


  <div class="row">
    <div class=" col-md-6 col-lg-4 mx-auto " onload="display()">
      <h1 class="  mb-5 mt-5 ms-5">Edit Product </h1>

      <form action="/admin/editproduct/{{product._id}}" method="post" enctype="multipart/form-data">

        <table class="table table-borderless">
          <tr>
            <td>
              <p class="opacity-75 ">Title</p>
            </td>
            <td>
              <input type="text" class="form-control" name="title" required value="{{product.title}}">
            </td>
          </tr>
          <tr>
            <td>
              <p class="opacity-75">Descripition</p>
            </td>
            <td>
              <input type="text" class="form-control" name="description" style="height" value="{{product.description}}"
                aria-describedby="emailHelp">
            </td>
          </tr>
          <tr>
            <td>
              <p class="opacity-75">Price</p>
            </td>
            <td>
              <input type="number" class="form-control" name="price" value="{{product.price}}" min="0">
            </td>
          </tr>

          <tr>
            <td>
              <p class="opacity-75">Category</p>
            </td>
            <td>
              <select class="form-select opacity-75 " name="category" value="{{product.category}}"
                aria-label="Default select example">
                <option selected>Select </option>
                <option value="indoor">Indoor plants</option>
                <option value="outdoor">Outdoor PLants</option>
                <option value="gifts">Gifts</option>
                <option value="pots">Pots</option>
              </select>
            </td>
          </tr>

          <tr>
            <td>
              <p class="opacity-75">Quantity</p>
            </td>
            <td>
              <input type="number" class="form-control" name="stock" value="{{product.stock}}" min="0">
            </td>
          </tr>


        </table>



    </div>
    <div class="col-md-6 mt-5 ">

      <div class="ms-5">
        <h1 class="fs-2 text-warning mb-5 ms-5">Choose Images </h1>
      </div>
      <label for="formFileMultiple" class="form-label">Select all images</label>
      <input class="form-control" name="file" type="file" id="formFileMultiple" style="width: 30rem;" multiple />
    </div>


  </div>
  <div class="row text-center">
    <div class="d-flex justify-content-center mt-5 mb-5 ">
      <input class="btn btn-success " type="submit" value="EDIT">


    </div>
  </div>
  </form>
</div>





</div>
