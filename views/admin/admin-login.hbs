<body class="animsition">
  <!-- Slider -->
  <section class="section-slide">
    <div class="wrap-slick1 rs1-slick1">
      <div class="slick1">
        <div class="item-slick1" style="background-image: url(images/login_user2.jpg);">
          <div class="container h-full">
            <div class="d-flex flex-col-l-m h-full p-t-100 p-b-30">
              <div class="d-flex">
                <div class="d-flex flex-col-l-m h-full p-t-100 p-b-30">
                  <div class="layer-slick1 animated visible-false" data-appear="fadeInDown" data-delay="0">
                    <span class="ltext-202 cl2 respon2 text-white">
                      Hai Folks
                    </span>
                  </div>

                  <div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
                    <h2 class="text-white ltext-104 cl2 p-t-19 p-b-43 respon1">
                      WELCOME TO THE WORLD OF LIFE
                    </h2>
                  </div>
                </div>

                <div class="text-center flex-col-l-m h-full p-t-100 p-b-30">
                  <form class="mt-5 justify-content-center" action="/admin/panel" method="post">
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label float-left text-light font-weight-bold">Email address <span
													class="text-danger ">*</span></label>
                      <input type="email" class="form-control" style="width: 30rem;" name="email"
                        id="exampleInputEmail1" aria-describedby="emailHelp">

                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label float-left text-light font-weight-bold">Password</label>
                      <input type="password" class="form-control " style="width: 30rem;" name="password"
                        id="exampleInputPassword1">
                    </div>
                    {{#if loginerror}}
                    <p class="text-danger float-left font-weight-bold">Invalid email or password</p>
                    {{/if}}
                    <div class="mb-3 form-check">
                      {{!-- <input type="checkbox" class="form-check-input" id="exampleCheck1">
                      <label class="form-check-label" for="exampleCheck1">Check me out</label>
                      --}}
                    </div>
                    <button type="submit" class="btn btn-success font-weight-bold" onclick="fun()">Submit</button>
                  </form>
                </div>
              </div>

            </div>

          </div>
        </div>


      </div>
    </div>
  </section>


</body>