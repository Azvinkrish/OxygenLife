</div>


<script>
    function unBlockUser(userId) {
                
        $.ajax({
            url: '/admin/unBlockUser/' + userId,
            method: 'post',
            success: (response) => {
                $("#action").load(location.href + "#action");
               
                  
            }
        })
    }
</script>
<script>
    function blockUser(userId) {
        console.log(userId,6666566665)
        $.ajax({
            url: '/admin/blockUser/' + userId,
            method: 'post',
