<div class="container-fluid" id="action">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">User Management</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3" >
            {{!-- <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6> --}}
        </div>
        <div class="card-body">
            <div class="table-responsive"  >
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>lastlogin</th>
                            <th>Phonenumber</th>
                            <th>Action</th>

                    </thead>

                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.logintime}}</td>
                            <td>{{this.phonenumber}} </td>

                            {{#if this.isBlocked}}

                            <td><a 
                            onclick="blockUser('{{this._id}}')"
                             class="btn btn-danger">BLOCK</a>
                            </td>
                            {{else}}

                            <td><a  
                            onclick="unBlockUser('{{this._id}}')"
                            class="btn btn-success">UNBLOCK</a>
                            </td>
                            {{/if}}
                           




                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

<!-- Footer -->
